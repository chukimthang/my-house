<div class="container-fluid px-5">
  <h1 class="my-4">Chỉ số điện nước</h1>
  <%= link_to 'Nhập chỉ số', new_meter_path, class: 'btn btn-primary' %>
  <div class="my-4">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Tháng sử dụng</th>
          <th>Chỉ số điện</th>
          <th>Chỉ số nước</th>
          <th>Ngày tạo</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @meters.each do |meter| %>
          <tr>
            <td><%= meter.month_used.strftime('%Y-%m') %></td>
            <td><%= meter.electricity_index %></td>
            <td><%= meter.water_index %></td>
            <td><%= meter.created_at.strftime('%Y-%m-%d') %></td>
            <td>
              <%= link_to edit_meter_path(meter) do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= link_to "/meters/#{meter.id}", :method => :delete, data: { "turbo-method": :delete, confirm: "Bạn có muốn xoá bản ghi này không?" } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

