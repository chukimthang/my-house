<div class="container-fluid px-4"
  data-controller="dashboard-chart"
  data-dashboard-chart-summary-bill-value="<%= @summary_bill.to_json %>"
  >
  <h1 class="my-4">Bảng điều khiển</h1>
  <div class="d-flex align-items-center">
    <div class="me-3">Năm</div>
    <%= select_tag :year, options_for_select(@years, Date.today.year),
      class: "form-select",
      data: { action: "change->dashboard-chart#statisticSummary" },
      style: "width: 100px" %>
  </div>
  <div class="card my-4 col-md-10">
    <div class="card-header">
      <i class="fas fa-chart-bar me-1"></i>
      Biểu đồ hoá đơn nhà trọ
    </div>
    <div class="card-body">
      <div>
        <canvas id="bill-chart" width="100" height="40"></canvas>
      </div>
  </div>
</div>
